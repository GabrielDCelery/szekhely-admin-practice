{
    "extends": "standard",
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ]
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "globals": {
        "jest": true,
        "describe": true,
        "test": true,
        "expect": true,
        "beforeEach": true,
        "afterEach": true
    }
}